<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll"
    android:background="@drawable/ic_5202"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

 <LinearLayout 
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_weight="1">
     <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:textSize="18sp"
           android:textColor="#fff"
           android:layout_marginLeft="20dp"
         android:text="数据采集："/>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
      >

        <TextView
            android:layout_width="wrap_content"
              android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="温度：" />

        <EditText
             android:id="@+id/temp_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:textColor="#fff"
            android:text="湿度：" />

        <EditText
              android:id="@+id/humidity_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
          android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
              android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="烟雾：" />

        <EditText
            android:id="@+id/smoke_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
          android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
              android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="燃气：" />

        <EditText
            android:id="@+id/gas_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
              android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="光照：" />

        <EditText
              android:id="@+id/illumination_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
              android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="气压：" />

        <EditText
            android:id="@+id/pressure_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
          android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:textColor="#fff"
            android:text="Co2：" />

        <EditText
            android:id="@+id/co2_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
          android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
              android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Pm2.5：" />

        <EditText
            android:id="@+id/pm25_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
          android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:textColor="#fff"
            android:text="人体红外：" />

        <EditText
            android:id="@+id/stateHumanInfrared_et"
            android:layout_width="150dp"
            android:enabled="false"
              android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
 </LinearLayout>

 <RelativeLayout
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1.5"
     android:orientation="vertical" >

     <TextView
           android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
           android:textSize="18sp"
           android:textColor="#fff"
         android:layout_height="wrap_content"
         android:text="电器控制：" />

     <CheckBox
         android:id="@+id/lamp_cb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:button="@drawable/ic_5203"
         android:layout_marginTop="50dp"/>
     
     <CheckBox
         android:id="@+id/curtain_cb"
         android:layout_width="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_height="wrap_content"
         android:button="@drawable/ic_5206"
         android:layout_marginTop="50dp"/>
     
     <CheckBox
         android:id="@+id/wind_speed_cb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:button="@drawable/ic_5208"
         android:layout_marginRight="50dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="50dp"/>
     
     <CheckBox
         android:id="@+id/alarm_cb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:button="@drawable/ic_5209"
         android:layout_marginLeft="120dp"
         android:layout_marginTop="150dp"/>
     
     
         
     <CheckBox
         android:id="@+id/door_cb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:button="@drawable/ic_5211"
         android:layout_marginRight="120dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="150dp"/>
     
     
        <Button
         android:id="@+id/channe1_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/ic_5213"
         android:layout_marginTop="250dp"/>
     
     <Button
         android:id="@+id/channe2_btn"
         android:layout_width="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_height="wrap_content"
       android:background="@drawable/ic_5214"
         android:layout_marginTop="250dp"/>
     
     <Button
          android:id="@+id/channe3_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
      android:background="@drawable/ic_5215"
         android:layout_marginRight="50dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="250dp"/>
 </RelativeLayout>

</LinearLayout>