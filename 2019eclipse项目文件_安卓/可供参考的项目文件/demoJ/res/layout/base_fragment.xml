<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/base">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView1"
        android:orientation="horizontal" >
        
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="50dp"
                android:layout_y="45dp"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/tmp"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/shidu"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/rangqi"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" 
            android:layout_weight="1">

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="50dp"
                android:layout_y="45dp"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/guangzhao"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/qiya"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/pm25"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
         >
        <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="45dp"
        android:drawablePadding="20dp"
        android:drawableTop="@drawable/yanwu"
        android:text="0"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />
        <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:drawableTop="@drawable/co2"
        android:text="0"
         android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />
         <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:drawableTop="@drawable/renti"
        android:text="0"
         android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />
         
        
        
        
    </LinearLayout>
        
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/ImageView001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="select"
                android:src="@drawable/warnon"
               
                />
             <ImageView
                android:id="@+id/ImageView002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="select"
                android:src="@drawable/dooron"
               
                />
             <ImageView
                android:id="@+id/ImageView003"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="select"
                android:src="@drawable/dengon"
               
                />
             <ImageView
                android:id="@+id/ImageView004"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="select"
                android:src="@drawable/funon"               
                />
              

           
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
             >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="145dp"
                android:src="@drawable/logo2" />

            <ImageView
                android:id="@+id/ImageView005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="33dp"
                android:tag="select"
              android:scaleX="0.6"
              android:scaleY="0.6"
                android:src="@drawable/on" />

            <ImageView
                android:id="@+id/ImageView006"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:tag="select"
                android:scaleX="0.6"
              android:scaleY="0.6"
                android:src="@drawable/pause" />

            <ImageView
                android:id="@+id/ImageView007"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageView2"
                android:tag="select"
                android:scaleX="0.6"
              android:scaleY="0.6"
                android:src="@drawable/off" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
             >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="145dp"
                
                android:src="@drawable/logo3" />

            <ImageView
                android:id="@+id/ImageView009"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImageView008"
                android:layout_centerHorizontal="true"
                android:tag="select"
                android:src="@drawable/two" />

            <ImageView
                android:id="@+id/ImageView0010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ImageView009"
                android:layout_marginRight="24dp"
                android:tag="select"
                android:src="@drawable/three" />

            <ImageView
                android:id="@+id/ImageView008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:tag="select"
                android:layout_toLeftOf="@+id/ImageView009"
                android:src="@drawable/one" />
           <LinearLayout 
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_alignLeft="@+id/ImageView008"
                android:layout_below="@+id/ImageView008"
               >
               
               <ImageView
                android:id="@+id/ImageView0011"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_weight="1"
               android:tag="select"
                android:src="@drawable/tv" />
               <ImageView
                android:id="@+id/ImageView0012"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_weight="1"
               android:tag="select"
                android:src="@drawable/dvd" />
               <ImageView
                android:id="@+id/ImageView0013"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_weight="1"
               android:tag="select"
                android:src="@drawable/kongtiao" />
           </LinearLayout>
            
            
        </RelativeLayout>
        
    </LinearLayout>
        
    </LinearLayout>
     
     
</RelativeLayout>