<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:text="房号：" />
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
    
                <Spinner 
                    android:id="@+id/sp_sensor"
                    android:layout_width="80dp"
                     android:entries="@array/sensor"
                    android:layout_height="wrap_content"/>
                <Spinner 
                    android:id="@+id/sp_condition"
                    android:layout_width="80dp"
                     android:entries="@array/condition"
                    android:layout_height="wrap_content"/>
                <EditText 
                    android:id="@+id/et_value"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                
                 <Spinner 
                    android:id="@+id/sp_device"
                    android:layout_width="120dp"
                    android:entries="@array/device"
                    android:layout_height="wrap_content"/>
                 
                     <Spinner 
                    android:id="@+id/sp_state"
                    android:layout_width="120dp"
                    android:entries="@array/state"
                    android:layout_height="wrap_content"/>
                 
    </LinearLayout>
    
   <LinearLayout 
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
       android:layout_height="wrap_content">
                     <TextView 
                         android:layout_width="wrap_content"
                         android:text="联动开关"
                         android:layout_height="wrap_content"/>
         <Switch
        android:id="@+id/sw_linkage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sw_tv"
        android:layout_marginRight="40dp"
        android:textOff="关"
        android:textOn="开" />
   </LinearLayout>
  
    
</LinearLayout>